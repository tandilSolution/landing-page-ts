<!-- ===== Sección Contacto ===== -->
<section id="contacto" class="py-24">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                Hablemos de tu Proyecto
            </h2>
            <p class="text-lg text-slate-300 max-w-xl mx-auto">
                Completá el formulario o contactanos directamente. Estamos
                listos para ayudarte.
            </p>
        </div>

        <div class="flex flex-col md:flex-row gap-12">
            <!-- Formulario -->
            <form class="w-full md:w-2/3 space-y-6">
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium text-slate-300 mb-2"
                        >Tu Nombre</label
                    >
                    <input
                        type="text"
                        id="name"
                        name="name"
                        class="form-input w-full px-4 py-3 rounded-lg"
                        placeholder="Juan Pérez"
                    />
                </div>
                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-slate-300 mb-2"
                        >Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-input w-full px-4 py-3 rounded-lg"
                        placeholder="juan.perez@empresa.com"
                    />
                </div>
                <div>
                    <label
                        for="message"
                        class="block text-sm font-medium text-slate-300 mb-2"
                        >Tu Mensaje</label
                    >
                    <textarea
                        id="message"
                        name="message"
                        rows="5"
                        class="form-input w-full px-4 py-3 rounded-lg"
                        placeholder="Me gustaría consultar sobre..."></textarea>
                </div>
                <button
                    type="submit"
                    class="w-full bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold text-lg hover:bg-purple-500 transition-all duration-300 shadow-2xl shadow-purple-500/30 transform hover:scale-105"
                >
                    Enviar Consulta
                </button>
            </form>

            <!-- Info de Contacto -->
            <div class="w-full md:w-1/3 space-y-6">
                <div
                    class="bg-slate-900 p-6 rounded-lg border border-slate-700"
                >
                    <h4 class="text-xl font-semibold text-white mb-1">Email</h4>
                    <a
                        href="mailto:contacto@tandilsolution.com"
                        class="text-slate-300 hover:text-purple-400 transition-colors"
                        >contacto@tandilsolution.com</a
                    >
                </div>
                <div
                    class="bg-slate-900 p-6 rounded-lg border border-slate-700"
                >
                    <h4 class="text-xl font-semibold text-white mb-1">
                        Teléfono
                    </h4>
                    <a
                        href="tel:+542494123456"
                        class="text-slate-300 hover:text-purple-400 transition-colors"
                        >+54 (249) 412-3456</a
                    >
                </div>
                <div
                    class="bg-slate-900 p-6 rounded-lg border border-slate-700"
                >
                    <h4 class="text-xl font-semibold text-white mb-3">
                        Redes Sociales
                    </h4>
                    <div class="space-y-3">
                        <a
                            href="#"
                            class="flex items-center text-slate-300 hover:text-purple-400 transition-colors"
                        >
                            Instagram
                        </a>
                        <a
                            href="#"
                            class="flex items-center text-slate-300 hover:text-purple-400 transition-colors"
                        >
                            Facebook
                        </a>
                        <a
                            href="#"
                            class="flex items-center text-slate-300 hover:text-purple-400 transition-colors"
                        >
                            TikTok
                        </a>
                        <a
                            href="#"
                            class="flex items-center text-slate-300 hover:text-purple-400 transition-colors"
                        >
                            LinkedIn
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
